{
  "name": "@irispixel/svelte.badge",
  "license": "SEE LICENSE IN LICENSE.md",
  "repository": "git@github.com:irispixel/irispixel-ui.git",
  "version": "0.1.10",
  "main": "package/index.cjs",
  "module": "package/index.esm.mjs",
  "types": "package/index.d.ts",
  "author": "IrisPixel",
  "scripts": {
    "clean": "rimraf package",
    "rollup": "rollup -c ../../rollup.config.js",
    "build": "svelte-kit package && yarn rollup",
    "package": "svelte-kit package && yarn rollup",
    "prepare": "yarn clean && NODE_ENV=production yarn package",
    "test": "jest",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --ignore-path ./../../.gitignore --check --plugin-search-dir=. . && eslint .",
    "format": "prettier --ignore-path ./../../.gitignore --write --plugin-search-dir=. .",
    "pub": "yarn prepare && cd package && npm publish --tolerate-republish",
    "patch": "yarn version patch --deferred && yarn version apply"
  },
  "type": "module",
  "publishConfig": {
    "access": "public"
  }
}
