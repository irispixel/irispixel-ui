---
import '@fontsource/dm-sans';

export interface Props {
  title: string;
}

const { title } = Astro.props as Props;
---

<html lang='en'>
  <head>
    <meta charset='utf-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>{title}</title>
    <slot name='head'></slot>
  </head>
  <body>
    <slot name='body'></slot>
    <style lang='scss'>
      body {
        font-family: 'DM Sans';
        // background-color: #000;
      }
    </style>
  </body>
</html>
